# ================================
# DATABASE (Required)
# ================================
# Get from: https://neon.tech (free tier available)
# After creating a project, copy the connection string from the dashboard
DATABASE_URL="postgresql://username:password@ep-xxx.us-west-2.aws.neon.tech/dbname?sslmode=require"

# ================================
# CLERK AUTHENTICATION (Required)
# ================================
# Get from: https://clerk.com (free tier available)
# 1. Create an application
# 2. Copy keys from API Keys page
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY="pk_test_..."
CLERK_SECRET_KEY="sk_test_..."

# Clerk URLs - Customize these based on your routing
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/dashboard
NEXT_PUBLIC_CLERK_SIGN_IN_FALLBACK_REDIRECT_URL=/
NEXT_PUBLIC_CLERK_SIGN_UP_FALLBACK_REDIRECT_URL=/

# ================================
# OPENAI API (Required for AI generation)
# ================================
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY="sk-proj-..."

# ================================
# UPLOADTHING (Required for image uploads)
# ================================
# Get from: https://uploadthing.com
# 1. Create an app
# 2. Copy your app ID and secret
UPLOADTHING_SECRET="sk_live_..."
UPLOADTHING_APP_ID="your_app_id"

# ================================
# OPTIONAL: RATE LIMITING
# ================================
# Upstash Redis for production rate limiting
# Get from: https://upstash.com
# UPSTASH_REDIS_REST_URL=""
# UPSTASH_REDIS_REST_TOKEN=""

# ================================
# OPTIONAL: EMAIL NOTIFICATIONS
# ================================
# Resend for transactional emails
# Get from: https://resend.com
# RESEND_API_KEY="re_..."
# FROM_EMAIL="noreply@yourdomain.com"

# ================================
# APP CONFIGURATION
# ================================
# For local development
NEXT_PUBLIC_API_URL=http://localhost:3000

# For production (update with your domain)
# NEXT_PUBLIC_APP_URL="https://yourdomain.com"

# ================================
# FEATURE FLAGS
# ================================
# Control feature availability
NEXT_PUBLIC_FF_SETTINGS=true
NEXT_PUBLIC_FF_HN=true
NEXT_PUBLIC_FF_SCHEDULE=true
NEXT_PUBLIC_FF_ANALYTICS=true

# ================================
# SECURITY & PREVIEW
# ================================
# Secret for preview links (generate a random string)
PREVIEW_SECRET="your-random-preview-secret-here"
